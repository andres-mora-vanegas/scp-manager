{
  "name": "scp-manager",
  "version": "1.0.0",
  "description": "An Electron-based SCP file manager alternative to WinSCP",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "dev": "npm run build:css && electron . --dev",
    "build:css": "sass styles.scss styles.css",
    "watch:css": "sass --watch styles.scss styles.css",
    "format": "prettier --write \"**/*.{js,json,scss,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,scss,css,html}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "npm run build:css && electron-builder",
    "build:linux": "npm run build:css && electron-builder --linux",
    "build:win": "npm run build:css && electron-builder --win",
    "build:mac": "npm run build:css && electron-builder --mac",
    "dist": "npm run build:css && electron-builder --publish=never"
  },
  "keywords": [
    "scp",
    "sftp",
    "file-manager",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.scpmanager.app",
    "productName": "SCP Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!styles.scss",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.eslintrc.json",
      "!.prettierrc",
      "!.prettierignore",
      "!.eslintignore"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "sass": "^1.71.1"
  },
  "dependencies": {
    "sql.js": "^1.10.3",
    "ssh2": "^1.15.0"
  }
}
